<UserControl
    x:Class="Sidekick.Windows.Leagues.Incursion.Room"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sidekick.Windows.Leagues.Incursion"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        Name="Container"
        BorderBrush="Black"
        BorderThickness="0,0,0,1">
        <StackPanel Orientation="Horizontal">
            <local:RoomTier Model="{Binding Model.Level1}" />
            <local:RoomTier Model="{Binding Model.Level2}" />
            <local:RoomTier Model="{Binding Model.Level3}" />
            <Border BorderBrush="Black" BorderThickness="0,0,1,0">
                <TextBlock
                    Width="300"
                    Padding="4"
                    VerticalAlignment="Center"
                    Text="{Binding Model.Contains}"
                    TextWrapping="Wrap" />
            </Border>
            <TextBlock
                Width="250"
                Padding="4"
                VerticalAlignment="Center"
                Text="{Binding Model.Modifiers}"
                TextWrapping="Wrap" />
        </StackPanel>
    </Border>
</UserControl>
