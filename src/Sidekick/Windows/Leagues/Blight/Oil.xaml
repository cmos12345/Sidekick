<UserControl
    x:Class="Sidekick.Windows.Leagues.Blight.Oil"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sidekick.Windows.Leagues.Blight"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="/Styles/Main.xaml" />
    </UserControl.Resources>

    <Border
        Name="Container"
        Margin="{StaticResource SpacerBottom}"
        BorderBrush="{Binding Path=Model.Color}"
        BorderThickness="5,0,0,0">
        <GroupBox Width="250" Margin="0">
            <GroupBox.Header>
                <WrapPanel>
                    <Image
                        MaxHeight="30"
                        Margin="{StaticResource SpacerRight}"
                        Source="{Binding Image}" />
                    <TextBlock VerticalAlignment="Center" Text="{Binding Path=Model.Name}" />
                </WrapPanel>
            </GroupBox.Header>
            <TextBlock Text="{Binding Path=Model.Description}" TextWrapping="Wrap" />
        </GroupBox>
    </Border>
</UserControl>
